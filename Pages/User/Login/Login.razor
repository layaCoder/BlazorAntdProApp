@namespace BlazorAntdProApp.Pages.User
@layout UserLayout
@page "/user/login"

<div class="main__b__0">
    <Card BodyStyle="background:#F5F9FF !important;">
        <div class="login">
            <Image Preview="false" Src="/assets/logo_cutted.png"></Image>
            <Flex Vertical="false" Align="center" Justify="center">
                <span style="margin-top:50px;font-size:24px;font-weight:bold;font-family:Heuristica">Pricing System</span>
            </Flex>
            <Divider Style="margin-top:6px;margin-bottom:20px;"/>
            <Form Model="@_model" OnFinish="HandleSubmit" >
                <FormItem>
                    <AntDesign.Input Placeholder="User Name" Size="large" @bind-Value="@context.UserName">
                        <Prefix><Icon Type="user" /></Prefix>
                    </AntDesign.Input>
                </FormItem>
                <FormItem>
                    <AntDesign.Input Placeholder="Password" Size="large" @bind-Value="@context.Password" Type="password">
                        <Prefix><Icon Type="lock" /></Prefix>
                    </AntDesign.Input>
                </FormItem>

                <Button Type="primary" HtmlType="submit" Class="submit" Size="large" Block>Log in </Button>
            </Form>
            <Divider></Divider>
            <Flex Vertical="false" Justify="center" Align="center">
                <div class="link_icon_wrapper">
                    <a href="https://www.facebook.com/shipamerican/">
                        <Icon Class="link_iocn" Type="facebook" Fill="#0D76BD" Theme="outline" Style="font-size:22px;width:20.2px;height:20.2px;"  />
                    </a>
                   
                    <a >
                        <Icon Class="link_iocn" Type="linkedin" Fill="#0D76BD" Theme="outline" Style="font-size:22px;width:20.2px;height:20.2px;" />
                    </a>
                    <a style="width:20.2px;height:20.2px;" href="https://x.com/AmericanShipNJ">
                        <svg focusable="false"
                             width="1em;"
                             height="1em;"
                             style="pointer-events:none;"
                             version="1.0" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" aria-hidden="true">
                            <g id="X Twitter1_layer"><path fill="#0D76BD" d="M389.2 48h70.6L305.6 224.2 487 464H345L233.7 318.6 106.5 464H35.8L200.7 275.5 26.8 48H172.4L272.9 180.9 389.2 48zM364.4 421.8h39.1L151.1 88h-42L364.4 421.8z"></path></g>
                        </svg>
                    </a>
                </div>
            </Flex>
        </div>
    </Card>

</div>